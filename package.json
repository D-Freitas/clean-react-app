{
  "name": "clean-react-app",
  "version": "1.0.0",
  "description": "This project is a favorable configuration for applying Architectural pattern",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ICU_DATA=node_modules/full-icu jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/D-Freitas/clean-react-app.git"
  },
  "author": "Davi Freitas",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/D-Freitas/clean-react-app/issues"
  },
  "homepage": "https://github.com/D-Freitas/clean-react-app#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.28.0",
    "git-commit-msg-linter": "^4.0.7",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-localstorage-mock": "^2.4.18",
    "lint-staged": "^12.3.3",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
